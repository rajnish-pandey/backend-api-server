{
  "info": {
    "name": "In-Memory Blog API",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Postman collection for testing in-memory blog API with JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1 - User Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "signup"]
        }
      }
    },
    {
      "name": "2 - User Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "login"]
        }
      }
    },
    {
      "name": "3 - Create Post",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"My first post\",\n  \"content\": \"This is a post created via Postman\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/posts",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "posts"]
        }
      }
    },
    {
      "name": "4 - Like Post",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/posts/1/like",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "posts", "1", "like"]
        }
      }
    },
    {
      "name": "5 - Delete Post",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/posts/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "posts", "1"]
        }
      }
    },
    {
      "name": "6 - List Posts",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/api/posts",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "posts"]
        }
      }
    }
  ],
  "variable": [
    { "key": "jwtToken", "value": "" }
  ]
}
